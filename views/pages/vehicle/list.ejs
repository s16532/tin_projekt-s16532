<%- include('../../fragments/header.ejs')%>

<main>
    <h2>Pojazdy</h2>

    <table class="table-list">
        <thead>
            <tr>
                <th>VIN</th>
                <th>Rodzaj</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Rok produkcji</th>
                <th>Typ Silnika</th>
                <th>Pojemność</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        <% for (let veh of vehs) { %>
            <tr>
                <td><%= veh.VIN %></td>
                <td><%= veh.type %></td>
                <td><%= veh.brand %></td>
                <td><%= veh.model %></td>
                <td><%= veh.productionYear %></td>
                <td><%= veh.engineType %></td>
                <td><%= veh.engineSize %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/vehicles/details/<%= veh.id %>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <li>
                            <a href="/vehicles/edit/<%= veh.id %>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="/vehicles/delete/<%= veh.id %>" class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/vehicles/add" class="button-add">Dodaj nowy pojazd</a> </p>

</main>

<%- include('../../fragments/footer.ejs')%>