<%- include('../../fragments/header.ejs')%>

<main>
    <h2>Pracownicy</h2>

    <table class="table-list">
        <thead>
            <tr>
                <th>Nazwa użytkownika</th>
                <th>Nazwisko</th>
                <th>Imie</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        <% for (let emp of emps) { %>
            <tr>
                <td><%= emp.uname %></td>
                <td><%= emp.lastName %></td>
                <td><%= emp.firstName %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/employees/details/<%= emp.id %>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <li>
                            <a href="/employees/edit/<%= emp.id %>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="/employees/delete/<%= emp.id %>" class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/employees/add" class="button-add">Dodaj nowego pracownika</a> </p>

</main>

<%- include('../../fragments/footer.ejs')%>